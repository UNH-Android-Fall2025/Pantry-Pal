<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PantryPal" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/brand_green</item>
        <item name="colorPrimaryVariant">@color/brand_green</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brand_green_dark</item>
        <item name="colorSecondaryVariant">@color/brand_green_dark</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <!-- Status bar color - Brand Green -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/brand_green</item>
        <!-- Navigation bar color - Brand Green -->
        <item name="android:navigationBarColor" tools:targetApi="l">@color/brand_green</item>
        <!-- Hide action bar by default -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- NoActionBar theme for SplashActivity (now same as base theme) -->
    <style name="Theme.PantryPal.NoActionBar" parent="Theme.PantryPal">
        <item name="android:windowFullscreen">false</item>
    </style>

    <!-- Theme alias for PantryPaloneVo (matches Theme.PantryPal) -->
    <style name="Theme.PantryPaloneVo" parent="Theme.PantryPal">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/brand_green</item>
        <item name="colorPrimaryVariant">@color/brand_green</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/brand_green_dark</item>
        <item name="colorSecondaryVariant">@color/brand_green_dark</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <!-- Status bar color - Brand Green -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/brand_green</item>
        <!-- Navigation bar color - Brand Green -->
        <item name="android:navigationBarColor" tools:targetApi="l">@color/brand_green</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
