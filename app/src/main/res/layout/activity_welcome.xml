<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F8F7">

    <!-- Main Content Container -->
    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <!-- Grocery Bag Illustration -->
        <ImageView
            android:id="@+id/ivGroceryBag"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:scaleType="fitCenter"
            android:contentDescription="Grocery bag filled with fresh vegetables and fruits"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="20dp" />

        <!-- Title: PantryPal -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PantryPal"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#111814"
            android:letterSpacing="0.015"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp" />

        <!-- Tagline -->
        <TextView
            android:id="@+id/tvTagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your smart pantry assistant."
            android:textSize="16sp"
            android:textColor="#111814"
            android:layout_marginBottom="32dp" />

    </LinearLayout>

    <!-- Button Container -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp">

        <!-- Sign In Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSignIn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Sign In"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#111814"
            android:letterSpacing="0.015"
            android:background="@drawable/rounded_button_bg"
            android:backgroundTint="@color/brand_green"
            android:layout_marginBottom="12dp"
            android:paddingHorizontal="20dp" />

        <!-- Continue as Guest Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnContinueAsGuest"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Continue as Guest"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#111814"
            android:letterSpacing="0.015"
            android:background="@drawable/rounded_button_bordered"
            android:paddingHorizontal="20dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

