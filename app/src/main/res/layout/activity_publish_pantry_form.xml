<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F8F7"
    tools:context=".PublishPantryFormActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFF"
        android:elevation="4dp"
        app:titleTextColor="#111814"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/buttonBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_pantry_name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111814"
                android:layout_marginBottom="8dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etPantryName"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:background="@drawable/rounded_edittext_outline"
                    android:hint="@string/hint_pantry_name"
                    android:paddingStart="16dp"
                    android:paddingEnd="48dp"
                    android:inputType="textCapWords"
                    android:textColor="#111814"
                    android:textColorHint="#638872"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageButton
                    android:id="@+id/btnClearPantryName"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/ic_cancel"
                    android:tint="#638872"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/hint_pantry_name"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintTop_toTopOf="@id/etPantryName"
                    app:layout_constraintBottom_toBottomOf="@id/etPantryName"
                    app:layout_constraintEnd_toEndOf="@id/etPantryName" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/label_address"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111814" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/etAddress"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:background="@drawable/rounded_edittext_outline"
                    android:hint="@string/hint_address"
                    android:paddingStart="16dp"
                    android:paddingEnd="48dp"
                    android:inputType="textPostalAddress"
                    android:textColor="#111814"
                    android:textColorHint="#638872"
                    android:textSize="16sp"
                    android:imeOptions="actionNext"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageButton
                    android:id="@+id/btnClearAddress"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/ic_cancel"
                    android:tint="#638872"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/hint_address"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintTop_toTopOf="@id/etAddress"
                    app:layout_constraintBottom_toBottomOf="@id/etAddress"
                    app:layout_constraintEnd_toEndOf="@id/etAddress" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/label_start_date"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111814" />

            <EditText
                android:id="@+id/etStartDate"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_edittext_outline"
                android:padding="16dp"
                android:focusable="false"
                android:clickable="true"
                android:hint="@string/hint_pick_date"
                android:textColor="#111814"
                android:textColorHint="#638872"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/label_end_date"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111814" />

            <EditText
                android:id="@+id/etEndDate"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_edittext_outline"
                android:padding="16dp"
                android:focusable="false"
                android:clickable="true"
                android:hint="@string/hint_pick_date"
                android:textColor="#111814"
                android:textColorHint="#638872"
                android:textSize="16sp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/buttonBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingTop="12dp"
        android:background="#FFFFFF"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="@string/action_confirm_publish"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#111814"
            android:background="@drawable/rounded_button_bg"
            android:backgroundTint="@color/brand_green"
            android:letterSpacing="0.015"
            android:elevation="4dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnReject"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="12dp"
            android:text="@string/action_reject"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/brand_green"
            android:background="@drawable/rounded_button_bordered"
            android:backgroundTint="@android:color/transparent"
            android:letterSpacing="0.015" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
