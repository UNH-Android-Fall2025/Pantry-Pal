<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootRecipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F7F6">

    <!-- App Bar -->
    <LinearLayout
        android:id="@+id/appBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#4CAE4F"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Your Recipes"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:letterSpacing="-0.015" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_filter_list"
            android:tint="@android:color/white"
            android:contentDescription="Filter" />

    </LinearLayout>

    <!-- Header (shown when recipes are loaded) -->
    <TextView
        android:id="@+id/tvRecipeFor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="BASED ON YOUR PANTRY"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#757575"
        android:letterSpacing="0.05"
        android:textAllCaps="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="24dp"
        android:paddingBottom="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/appBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Loading State Container (centered vertically) -->
    <LinearLayout
        android:id="@+id/loadingContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/appBar"
        app:layout_constraintBottom_toTopOf="@id/btnCancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Illustration Container -->
        <FrameLayout
            android:id="@+id/illustrationContainer"
            android:layout_width="192dp"
            android:layout_height="192dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/illustration_circle_bg"
            android:gravity="center"
            android:elevation="2dp">

            <!-- Food Illustration Image -->
            <ImageView
                android:id="@+id/ivFoodIllustration"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_food_illustration"
                android:alpha="0.8"
                android:contentDescription="Food illustration" />

            <!-- Decorative concentric circle 1 (110% scale) -->
            <View
                android:layout_width="211dp"
                android:layout_height="211dp"
                android:layout_gravity="center"
                android:background="@drawable/concentric_circle_1" />

            <!-- Decorative concentric circle 2 (125% scale) -->
            <View
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_gravity="center"
                android:background="@drawable/concentric_circle_2" />

        </FrameLayout>

        <!-- Text Content -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:maxWidth="320dp">

            <TextView
                android:id="@+id/tvLoadingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finding recipes for your ingredients…"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#131613"
                android:letterSpacing="-0.015"
                android:gravity="center"
                android:layout_marginBottom="12dp"
                tools:text="Finding recipes for your ingredients…" />

            <TextView
                android:id="@+id/tvLoadingSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Analyzing your pantry items to find the best matches."
                android:textSize="16sp"
                android:textColor="#6C7F6D"
                android:gravity="center"
                tools:text="Analyzing your pantry items to find the best matches." />

        </LinearLayout>

        <!-- Progress Bar Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:maxWidth="260dp"
            android:minWidth="260dp"
            android:layout_marginTop="16dp">

            <!-- Progress Label Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="4dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvProgressLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="GENERATING"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#4CAE4F"
                    android:letterSpacing="0.05"
                    android:gravity="start"
                    tools:text="GENERATING" />

                <TextView
                    android:id="@+id/tvProgressPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="75%"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#6C7F6D"
                    tools:text="75%" />

            </LinearLayout>

            <!-- Progress Track -->
            <FrameLayout
                android:id="@+id/progressTrackContainer"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@drawable/progress_track_bg"
                android:minHeight="6dp">

                <!-- Progress Fill -->
                <View
                    android:id="@+id/progressFill"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/progress_fill_bg"
                    android:layout_gravity="start"
                    tools:layout_width="195dp" />

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Error Message (shown on error) -->
    <TextView
        android:id="@+id/tvLoading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Generating recipes with AI..."
        android:textSize="16sp"
        android:gravity="center"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Recipes RecyclerView (shown when loaded) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerRecipes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvRecipeFor"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Cancel Button (at bottom, shown during loading) -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="48dp"
        android:text="Cancel"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#131613"
        android:letterSpacing="0.015"
        android:background="@drawable/button_transparent_rounded"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:minWidth="84dp"
        android:maxWidth="480dp"
        android:visibility="gone"
        android:drawableStart="@drawable/ic_close"
        android:drawablePadding="8dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Cancel"
        tools:visibility="visible" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="64dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Home -->
        <LinearLayout
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home_outline"
                android:tint="#9E9E9E"
                android:contentDescription="Home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#9E9E9E"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Recipes (Active) -->
        <FrameLayout
            android:id="@+id/btnRecipes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="4dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_menu_book"
                    android:tint="#4CAE4F"
                    android:contentDescription="Recipes" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recipes"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#4CAE4F"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Indicator Dot -->
            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/indicator_dot"
                android:contentDescription="Active indicator" />

        </FrameLayout>

        <!-- Cart -->
        <LinearLayout
            android:id="@+id/btnCart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_cart"
                android:tint="#9E9E9E"
                android:contentDescription="Cart" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cart"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#9E9E9E"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:id="@+id/btnProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_person"
                android:tint="#9E9E9E"
                android:contentDescription="Profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#9E9E9E"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
