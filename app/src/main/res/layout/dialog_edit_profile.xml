<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#1a1c1a"
        android:layout_marginBottom="24dp" />

    <!-- Edit Username Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btnEditUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="1dp"
        app:cardBackgroundColor="#FFFFFF"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Icon Container -->
            <LinearLayout
                android:id="@+id/iconContainerUsername"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/primary_container_light"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_edit"
                    android:tint="#0b210c"
                    android:contentDescription="Edit username icon" />

            </LinearLayout>

            <!-- Option Text -->
            <TextView
                android:id="@+id/tvEditUsername"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Edit Username"
                android:textSize="16sp"
                android:textStyle="normal"
                android:textColor="#1a1c1a"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@id/iconContainerUsername"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/chevronUsername" />

            <!-- Right Chevron Icon -->
            <ImageView
                android:id="@+id/chevronUsername"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chevron_right"
                android:tint="#434843"
                android:contentDescription="Navigate to edit username"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!-- Change Profile Picture Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btnChangePicture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="1dp"
        app:cardBackgroundColor="#FFFFFF"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Icon Container -->
            <LinearLayout
                android:id="@+id/iconContainerPicture"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/primary_container_light"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_person"
                    android:tint="#0b210c"
                    android:contentDescription="Change profile picture icon" />

            </LinearLayout>

            <!-- Option Text -->
            <TextView
                android:id="@+id/tvChangePicture"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Change Profile Picture"
                android:textSize="16sp"
                android:textStyle="normal"
                android:textColor="#1a1c1a"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@id/iconContainerPicture"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/chevronPicture" />

            <!-- Right Chevron Icon -->
            <ImageView
                android:id="@+id/chevronPicture"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chevron_right"
                android:tint="#434843"
                android:contentDescription="Navigate to change profile picture"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!-- Cancel Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textSize="16sp"
        android:textStyle="normal"
        android:textColor="#434843"
        android:background="@drawable/rounded_button_bordered"
        android:paddingVertical="12dp"
        android:minHeight="44dp"
        android:layout_marginTop="16dp" />

</LinearLayout>
