<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC"
    android:fitsSystemWindows="true">

    <!-- Top Accent Bar -->
    <View
        android:id="@+id/topAccentBar"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:background="@color/brand_green"
        android:alpha="0.2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Main Content ScrollView -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topAccentBar"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Greeting Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="24dp"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/tvGreeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello, Sarah!"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:textColor="#121212"
                    android:letterSpacing="0.01" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="24dp" />

            <!-- Location Enable Card -->
            <LinearLayout
                android:id="@+id/locationEnableCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#F6F8F7"
                android:padding="16dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical"
                android:elevation="4dp">

                <!-- Icon Container -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/brand_green"
                    android:backgroundTint="@color/brand_green"
                    android:alpha="0.1"
                    android:padding="12dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_location_on"
                        android:tint="@color/brand_green"
                        android:contentDescription="Location icon" />

                </LinearLayout>

                <!-- Text Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enable Location"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#121212"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Find pantries near you"
                        android:textSize="14sp"
                        android:textColor="#757575" />

                </LinearLayout>

                <!-- Enable Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnEnableLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ENABLE"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/brand_green"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp" />

            </LinearLayout>

            <!-- Search Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingBottom="24dp"
                android:gravity="center_vertical">

                <!-- Search Input -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp">

                    <EditText
                        android:id="@+id/etSearch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Search for items or pantries"
                        android:paddingStart="48dp"
                        android:paddingEnd="16dp"
                        android:background="@drawable/rounded_edittext_white"
                        android:textColor="#121212"
                        android:textColorHint="#757575"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_search"
                        android:tint="#757575"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginStart="12dp"
                        android:contentDescription="Search icon" />

                </FrameLayout>

                <!-- Search Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:text="SEARCH"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/rounded_button_circle"
                    android:backgroundTint="@color/brand_green"
                    android:paddingHorizontal="24dp"
                    android:elevation="4dp" />

            </LinearLayout>

            <!-- Nearby Pantries Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingBottom="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_location_on"
                    android:tint="#757575"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Location icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nearby Pantries"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#121212" />

            </LinearLayout>

            <!-- Pantries RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPantryList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingBottom="96dp"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:gravity="bottom|center_horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="14dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Home Button -->
        <LinearLayout
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop="4dp"
            android:paddingBottom="0dp">

            <!-- Icon with background pill -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp">

                <View
                    android:layout_width="48dp"
                    android:layout_height="32dp"
                    android:background="@drawable/rounded_pill_bg"
                    android:backgroundTint="@color/brand_green"
                    android:alpha="0.2"
                    android:layout_gravity="center" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home"
                    android:tint="@color/brand_green"
                    android:layout_gravity="center" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp"
                android:textStyle="normal"
                android:textColor="@color/brand_green"
                android:gravity="center" />

        </LinearLayout>

        <!-- Recipes Button -->
        <LinearLayout
            android:id="@+id/btnRecipes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop="4dp"
            android:paddingBottom="0dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_menu_book"
                android:tint="#757575"
                android:layout_marginBottom="4dp"
                android:contentDescription="Recipes" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recipes"
                android:textSize="12sp"
                android:textStyle="normal"
                android:textColor="#757575"
                android:gravity="center" />

        </LinearLayout>

        <!-- Add Button (Floating - NO TEXT) -->
        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="-28dp"
            android:layout_marginBottom="0dp">

            <View
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/rounded_button_circle"
                android:backgroundTint="@color/brand_green"
                android:elevation="8dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAdd"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@android:color/transparent"
                android:elevation="9dp"
                android:padding="0dp"
                android:contentDescription="Add pantry" />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_add"
                android:tint="@android:color/white"
                android:layout_gravity="center"
                android:elevation="10dp" />

        </FrameLayout>

        <!-- Cart Button (was Pantry) -->
        <LinearLayout
            android:id="@+id/btnPantry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop="4dp"
            android:paddingBottom="0dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_cart"
                android:tint="#757575"
                android:layout_marginBottom="4dp"
                android:contentDescription="Cart" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cart"
                android:textSize="12sp"
                android:textStyle="normal"
                android:textColor="#757575"
                android:gravity="center" />

        </LinearLayout>

        <!-- Profile Button -->
        <LinearLayout
            android:id="@+id/btnProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop="4dp"
            android:paddingBottom="0dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_person"
                android:tint="#757575"
                android:layout_marginBottom="4dp"
                android:contentDescription="Profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="12sp"
                android:textStyle="normal"
                android:textColor="#757575"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

    <!-- Hidden views for backward compatibility -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvCurrentLocation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/ivLocationButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>
