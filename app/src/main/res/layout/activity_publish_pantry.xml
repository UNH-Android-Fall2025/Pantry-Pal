<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ðŸ“¸ Publish Pantry"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:padding="16dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/ivPreview"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_margin="16dp"
        android:background="@android:color/darker_gray"
        android:scaleType="centerCrop"
        android:contentDescription="Image preview"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/ivPreview"
        app:layout_constraintBottom_toBottomOf="@id/ivPreview"
        app:layout_constraintStart_toStartOf="@id/ivPreview"
        app:layout_constraintEnd_toEndOf="@id/ivPreview" />

    <TextView
        android:id="@+id/tvDetectionStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Take a photo to scan products"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:padding="16dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/ivPreview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnTakePhoto"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ðŸ“· Take Photo"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnFromGallery"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ðŸ–¼ï¸ Choose from Gallery"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="âœ… Continue to Confirm Products"
            android:textSize="18sp"
            android:visibility="gone"
            android:backgroundTint="#4CAF50" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
