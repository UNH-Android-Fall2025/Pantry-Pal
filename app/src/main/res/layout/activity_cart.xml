<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC"
    android:fitsSystemWindows="true">

    <!-- Top Accent Bar -->
    <View
        android:id="@+id/topAccentBar"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:background="#4CAF50"
        android:alpha="0.2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Top App Bar -->
    <LinearLayout
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f6f7f6"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/topAccentBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="#121212"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back button"
            android:padding="12dp" />

        <!-- Cart Title -->
        <TextView
            android:id="@+id/tvCartTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cart"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#121212"
            android:gravity="center" />

        <!-- Spacer for symmetry -->
        <View
            android:layout_width="48dp"
            android:layout_height="48dp" />

    </LinearLayout>

    <!-- Main Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintBottom_toTopOf="@id/bottomSummaryBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <!-- Cart Items RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCartItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

            <!-- Empty Cart State -->
            <LinearLayout
                android:id="@+id/emptyCartContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone">

                <!-- Empty Cart Icon -->
                <ImageView
                    android:id="@+id/ivEmptyCartIcon"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/ic_cart"
                    android:tint="#757575"
                    android:alpha="0.5"
                    android:contentDescription="Empty cart icon" />

                <!-- Empty Cart Title -->
                <TextView
                    android:id="@+id/tvEmptyCartTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your cart is empty"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#121212"
                    android:layout_marginTop="24dp" />

                <!-- Empty Cart Subtitle -->
                <TextView
                    android:id="@+id/tvEmptyCartSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start adding items to your shopping list."
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginTop="8dp"
                    android:gravity="center" />

                <!-- Browse Pantries Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnBrowsePantries"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Browse Pantries"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/rounded_button_green"
                    android:backgroundTint="#4CAF50"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp"
                    android:layout_marginTop="24dp"
                    android:contentDescription="Browse pantries to add items" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Summary Bar -->
    <LinearLayout
        android:id="@+id/bottomSummaryBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Checkout Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCheckout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proceed to Checkout"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_button_green"
            android:backgroundTint="#4CAF50"
            android:paddingVertical="16dp"
            android:layout_marginTop="16dp"
            android:elevation="4dp"
            android:contentDescription="Proceed to checkout" />

    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="14dp"
        android:fitsSystemWindows="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Home -->
        <LinearLayout
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home_outline"
                android:tint="#434843"
                android:contentDescription="Home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp"
                android:textStyle="normal"
                android:textColor="#434843"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Recipes -->
        <LinearLayout
            android:id="@+id/btnRecipes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_menu_book"
                android:tint="#434843"
                android:contentDescription="Recipes" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recipes"
                android:textSize="12sp"
                android:textStyle="normal"
                android:textColor="#434843"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Cart (Active State) -->
        <LinearLayout
            android:id="@+id/btnCart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp">

                <View
                    android:layout_width="48dp"
                    android:layout_height="32dp"
                    android:background="@drawable/rounded_pill_bg"
                    android:backgroundTint="#4CAF50"
                    android:alpha="0.2"
                    android:layout_gravity="center" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_cart"
                    android:tint="#4CAF50"
                    android:layout_gravity="center"
                    android:contentDescription="Cart" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cart"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:layout_marginTop="0dp" />

        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:id="@+id/btnProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_person"
                android:tint="#434843"
                android:contentDescription="Profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="12sp"
                android:textStyle="normal"
                android:textColor="#434843"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

