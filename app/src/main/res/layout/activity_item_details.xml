<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF8FD"
    android:maxWidth="448dp"
    android:layout_gravity="center_horizontal">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="#1D1B20"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Go back"
            android:padding="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pantry Pal"
            android:textSize="20sp"
            android:textStyle="normal"
            android:textColor="#1D1B20"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/contentScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/footer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Image Preview Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardThumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#E6E0E9">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:minHeight="300dp"
                    android:background="#E6E0E9">

                    <!-- Product Image -->
                    <ImageView
                        android:id="@+id/ivProductThumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:contentDescription="Product image"
                        android:visibility="gone" />

                    <!-- Placeholder -->
                    <LinearLayout
                        android:id="@+id/placeholderContent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="32dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_image_not_supported"
                            android:tint="#49454F"
                            android:contentDescription="No photo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No Photo"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:textColor="#49454F"
                            android:layout_marginTop="8dp" />

                    </LinearLayout>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <!-- Product Name Input with Floating Label -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:minHeight="56dp">

                <!-- Label -->
                <TextView
                    android:id="@+id/tvProductNameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product name"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:textColor="#79747E"
                    android:background="#FDF8FD"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="-8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- EditText with Outline -->
                <EditText
                    android:id="@+id/etProductName"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:inputType="textCapWords"
                    android:textSize="16sp"
                    android:textColor="#1D1B20"
                    android:hint="Product name"
                    android:textColorHint="#79747E"
                    android:background="@drawable/rounded_edittext_outline"
                    android:paddingStart="16dp"
                    android:paddingEnd="48dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:imeOptions="actionDone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Organic Tomatoes" />

                <!-- Clear Button -->
                <ImageButton
                    android:id="@+id/btnClearName"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/ic_cancel"
                    android:tint="#79747E"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Clear product name"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintTop_toTopOf="@id/etProductName"
                    app:layout_constraintBottom_toBottomOf="@id/etProductName"
                    app:layout_constraintEnd_toEndOf="@id/etProductName" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Confidence Chip -->
            <TextView
                android:id="@+id/tvConfidenceValue"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Confidence 95%"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1D192B"
                android:background="@drawable/rounded_pill_bg"
                android:backgroundTint="#E8DEF8"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:gravity="center_vertical"
                android:layout_gravity="start"
                tools:text="Confidence 95%" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Footer with Action Buttons -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingTop="12dp"
        android:background="#FDF8FD"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Add another item to pantry -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAddAnother"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Add another item to pantry"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/brand_green"
            android:background="@drawable/rounded_button_bordered"
            android:backgroundTint="@android:color/transparent"
            android:letterSpacing="0.015"
            android:layout_marginBottom="12dp" />

        <!-- Save and finish -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSaveFinish"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Save and finish"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_button_bg"
            android:backgroundTint="@color/brand_green"
            android:letterSpacing="0.015"
            android:elevation="4dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
