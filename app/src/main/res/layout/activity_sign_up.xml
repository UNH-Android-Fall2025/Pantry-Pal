<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/login_background"
    android:gravity="center">

    <!-- App Logo -->
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_splash"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="PantryPal Logo" />

    <!-- App Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PantryPal"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="4dp"
        android:gravity="center" />

    <!-- Tagline -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Your Account"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:alpha="0.9"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <!-- Sign Up Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Account"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary_blue"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join our community today"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <!-- Email Input -->
            <EditText
                android:id="@+id/etNewEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:background="@drawable/rounded_edittext"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary" />

            <!-- Password Input -->
            <EditText
                android:id="@+id/etNewPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:background="@drawable/rounded_edittext"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary" />

            <!-- Fingerprint Toggle -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/tvFingerprintToggleLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Enable Fingerprint Login"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary" />

                <Switch
                    android:id="@+id/switchFingerprint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!-- Sign Up Button -->
            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Create Account"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/rounded_button_blue"
                android:textColor="@color/white"
                android:layout_marginBottom="12dp" />

            <!-- Back to Login -->
            <TextView
                android:id="@+id/tvBackToLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? Sign In"
                android:textColor="@color/primary_blue"
                android:textSize="12sp"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/rounded_text_button"
                android:padding="8dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
