<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Camera Feature & Permission (ONCE ONLY) -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Internet & Network (ONCE ONLY) -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Biometric -->
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    
    <!-- Storage for profile pictures -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PantryPaloneVo"
        tools:targetApi="31">

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Authentication Activities -->
        <activity android:name=".WelcomeActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".SimpleLoginActivity" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".ForgotPasswordActivity" />

        <!-- Main App Activities -->
        <activity android:name=".HomePageActivity" />
        <activity android:name=".FingerprintActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".AccountSettingsActivity" />
        <activity android:name=".SplashActivity" />
        <activity android:name=".CartActivity" />

        <!-- Pantry Related Activities -->
        <activity android:name=".PublishPantryActivity" />
        <activity
            android:name=".ItemDetailsActivity"
            android:exported="false"
            android:parentActivityName=".PublishPantryActivity" />
        <activity
            android:name=".ReviewSavedItemsActivity"
            android:exported="false"
            android:parentActivityName=".PublishPantryActivity" />
        <activity android:name=".PublishPantryFormActivity" />
        <activity android:name=".PantryLocationActivity" />
        <activity android:name=".ReviewProductsActivity" />
        <activity android:name=".ConfirmProductsActivity" />

        <!-- Detection Activities -->
        <activity android:name=".RealtimeDetectionActivity" />

        <!-- Pantry Detector (ONCE ONLY - REMOVED DUPLICATE!) -->
        <activity
            android:name=".PantryDetectorActivity"
            android:screenOrientation="portrait"
            android:exported="false" />

    </application>

</manifest>
