rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if request is from Cloud Functions (admin SDK)
    function isCloudFunction() {
      return request.auth == null; // Cloud Functions use admin SDK with no auth
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own document
      allow read: if isOwner(userId);
      
      // Cloud Functions can read all users (for sending notifications)
      allow read: if isCloudFunction();
      
      // Users can create their own document during signup
      allow create: if isAuthenticated() && request.auth.uid == userId;
      
      // Users can update their own document
      allow update: if isOwner(userId);
      
      // Users can delete their own document
      allow delete: if isOwner(userId);
      
      // Orders subcollection - users can read/write their own orders
      match /orders/{orderId} {
        allow read, write: if isOwner(userId);
      }
      
      // Claims subcollection - donors can read/write their own claims
      // Recipients can create claims (when checking out), donors can read/update
      match /claims/{claimId} {
        // Donors can read their own claims
        allow read: if isOwner(userId);
        // Anyone authenticated can create claims (recipients creating orders)
        allow create: if isAuthenticated();
        // Donors can update their own claims (to change status)
        allow update: if isOwner(userId);
        // Donors can delete their own claims
        allow delete: if isOwner(userId);
      }
    }
    
    // Pantries collection
    match /pantries/{pantryId} {
      // Anyone authenticated can read pantries (for browsing)
      allow read: if isAuthenticated();
      
      // Cloud Functions can read all pantries (for triggers)
      allow read: if isCloudFunction();
      
      // Authenticated users can create/update pantries
      allow create: if isAuthenticated() 
        && request.resource.data.name is string
        && request.resource.data.address is string;
      
      allow update: if isAuthenticated();
      
      // Anyone authenticated can delete pantries (or restrict to owner if you add ownerId field)
      allow delete: if isAuthenticated();
      
      // Donors subcollection
      match /donors/{donorId} {
        // Anyone authenticated can read donors
        allow read: if isAuthenticated();
        
        // Cloud Functions can read all donors
        allow read: if isCloudFunction();
        
        // Users can create/update their own donor document
        allow create, update: if isAuthenticated() && donorId == request.auth.uid;
        
        // Users can delete their own donor document
        allow delete: if isAuthenticated() && donorId == request.auth.uid;
        
        // Items subcollection
        match /items/{itemId} {
          // Anyone authenticated can read items
          allow read: if isAuthenticated();
          
          // Cloud Functions can read all items
          allow read: if isCloudFunction();
          
          // Only the donor can add/update/delete their items
          allow create, update, delete: if isAuthenticated() && donorId == request.auth.uid;
        }
      }
      
      // Claims subcollection (orders for this pantry) - NEW
      match /claims/{claimId} {
        // Anyone authenticated can read claims
        allow read: if isAuthenticated();
        // Recipients can create claims, donors can update
        allow create: if isAuthenticated();
        allow update: if isAuthenticated();
      }
      
      // Reservations subcollection - KEPT FROM OLD RULES
      match /reservations/{reservationId} {
        // Users can read their own reservations
        allow read: if isAuthenticated() 
          && (resource.data.userId == request.auth.uid || request.auth.uid == resource.data.userId);
        
        // Users can create reservations
        allow create: if isAuthenticated() 
          && request.resource.data.userId == request.auth.uid;
        
        // Users can update their own reservations
        allow update: if isAuthenticated() 
          && resource.data.userId == request.auth.uid;
        
        // Users can delete their own reservations
        allow delete: if isAuthenticated() 
          && resource.data.userId == request.auth.uid;
      }
    }
    
    // Orders collection (main orders storage) - NEW
    match /orders/{orderId} {
      // Users can read orders they're involved in (as recipient or donor)
      allow read: if isAuthenticated() && (
        resource.data.recipientId == request.auth.uid ||
        resource.data.donorId == request.auth.uid
      );
      // Anyone authenticated can create orders
      allow create: if isAuthenticated();
      // Donors and recipients can update their orders
      allow update: if isAuthenticated() && (
        resource.data.donorId == request.auth.uid ||
        resource.data.recipientId == request.auth.uid
      );
    }
    
    // Notifications collection - NEW
    match /notifications/{notificationId} {
      allow read, write: if isAuthenticated();
    }
    
    // Recipes collection (if exists) - KEPT FROM OLD RULES
    match /recipes/{recipeId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Shared recipes collection (public read access)
    match /shared_recipes/{recipeId} {
      // Anyone can read shared recipes (no authentication required)
      allow read: if true;
      
      // Only authenticated users can create/update/delete
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
